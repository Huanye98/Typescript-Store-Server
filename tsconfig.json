{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "./",
        "lib": ["es6", "dom"]
    },
    "include": ["**/*.ts","./types/**/*.d.ts"],
    "exclude": [
        "node_modules", 
        "dist",
        "Tests/**"
    ]
}